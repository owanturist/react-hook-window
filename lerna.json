{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": ["*.md", "sandbox/**", "e2e/**", "**/tests/**"],
      "message": "chore(release): publish"
    },
    "version": {
      "allowBranch": "master"
    },
    "bootstrap": {
      "npmClientArgs": ["--frozen-lockfile"]
    }
  },
  "packages": ["packages/*"]
}
