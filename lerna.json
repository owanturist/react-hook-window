{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": ["*.md"],
      "message": "chore(release): publish %s"
    },
    "version": {
      "message": "chore(release): %s"
    },
    "bootstrap": {
      "npmClientArgs": ["--frozen-lockfile"]
    }
  },
  "packages": ["packages/*"]
}
