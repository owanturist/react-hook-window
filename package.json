{
  "name": "react-hook-window",
  "version": "1.0.0",
  "repository": "git@github.com:owanturist/react-hook-window.git",
  "author": "Anton Ovechkin <owanturist@gmail.com>",
  "license": "BSD-3-Clause",
  "sideEffects": false,
  "types": "types/index.d.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./es/index.js",
      "require": "./lib/index.js",
      "default": "./lib/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf ./dist ./es ./lib ./types",
    "prebuild": "yarn run clean",
    "build": "rollup --config",
    "postpublish": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
    "test": "jest ./tests",
    "test:watch": "yarn test -- --watch",
    "cy:open": "yarn cypress open",
    "cy:run": "yarn cypress run",
    "lint": "eslint . --config=.eslintrc.prod.json --ext=js,ts",
    "prettify": "prettier . --write",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "demo": "parcel ./demo/index.html",
    "demo:build": "parcel build ./demo/index.html --no-cache",
    "predemo:build": "yarn run clean"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "./scripts/git-commit-message.sh $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json,md}": [
      "prettier --write"
    ],
    "**/*.{js,ts}": [
      "eslint --config=.eslintrc.prod.json --fix"
    ]
  },
  "peerDependencies": {
    "react": "^16.8.0 | ^17.0.0",
    "react-dom": "^16.8.0 | ^17.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@testing-library/cypress": "^7.0.6",
    "@types/jest": "^26.0.23",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.throttle": "^4.1.6",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "babel-jest": "^27.0.2",
    "cypress": "^7.5.0",
    "cypress-fill-command": "^1.0.2",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.7",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "rollup": "^2.52.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "normalize-scroll-left": "^0.2.1"
  },
  "jest": {
    "testEnvironment": "jsdom"
  }
}
