{
  "name": "react-hook-window",
  "version": "1.0.0",
  "repository": "git@github.com:owanturist/react-hook-window.git",
  "author": "Anton Ovechkin <owanturist@gmail.com>",
  "license": "BSD-3-Clause",
  "sideEffects": false,
  "types": "types/index.d.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./es/index.js",
      "require": "./lib/index.js",
      "default": "./lib/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf ./dist ./es ./lib ./types",
    "prebuild": "npm run clean",
    "build": "rollup --config",
    "postpublish": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
    "test": "ava",
    "test:watch": "npm test -- --watch",
    "test:coverage": "nyc ava",
    "test:report": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint . --config=.eslintrc.prod.json --ext=js,ts",
    "prettify": "prettier . --write",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "demo": "parcel ./demo/index.html",
    "demo:build": "parcel build ./demo/index.html"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "./scripts/git-commit-message.sh $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json,md}": [
      "prettier --write"
    ],
    "**/*.{js,ts}": [
      "eslint --config=.eslintrc.prod.json --fix"
    ]
  },
  "peerDependencies": {
    "react": "^16.8.0 | ^17.0.0",
    "react-dom": "^16.8.0 | ^17.0.0"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.throttle": "^4.1.6",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "ava": "^3.15.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-ava": "^12.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.7",
    "lint-staged": "^11.0.0",
    "nyc": "^15.1.0",
    "parcel": "^2.0.0-beta.2",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.49.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1"
  }
}
